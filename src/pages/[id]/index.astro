---
import haikus from "../../const/haikus.json";
import Layout from "../../layouts/Layout.astro";
import Detail from "../../sections/Detail";

export function getStaticPaths() {
  return haikus.map(({ id }) => {
    return {
      params: { id },
    };
  });
}

const id =
  Astro.url.pathname
    .split("/")
    .filter((v) => Boolean(v))
    .at(-1) ?? "0";
---

<Layout><Detail id={id} client:only /></Layout>
