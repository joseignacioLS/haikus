---
import { haikus } from "../../const/haikus";
import Layout from "../../layouts/Layout.astro";
import All from "../../sections/All";

export function getStaticPaths() {
  return haikus.map((h) => {
    return {
      params: { id: h.order },
    };
  });
}

const id =
  Astro.url.pathname
    .split("/")
    .filter((v) => Boolean(v))
    .at(-1) ?? "0";
---

<Layout><All id={id} client:only /></Layout>
