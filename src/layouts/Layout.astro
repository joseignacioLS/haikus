---
import "@fontsource-variable/domine";
import "@fontsource-variable/open-sans";
import { ClientRouter } from "astro:transitions";
import { Modal } from "../components/Modal";
import { Toast } from "../components/Toast";
import "../styles/global.scss";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Verdecillo</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href=`/favicon.webp` />
    <meta name="description" content="Diario de Haikus de Jose" />

    <!-- Facebook Meta Tags -->
    <meta property="og:title" content="Verdecillo" />
    <meta property="og:url" content="https://verdecillo.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:description" content="Diario de Haikus de Verdecillo" />
    <meta
      property="og:image"
      content="https://verdecillo.netlify.app/share_img.jpg"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Verdecillo" />
    <meta name="twitter:description" content="Diario de Haikus de Verdecillo" />

    <!-- Preload Images -->
    <link rel="preload" href="/icons/back.svg" as="image" />
    <link rel="preload" href="/icons/close.svg" as="image" />
    <link rel="preload" href="/icons/share.svg" as="image" />
    <link rel="preload" href="/icons/me.webp" as="image" />

    <ClientRouter />
  </head>
  <body>
    <slot />
    <Modal client:only />
    <Toast client:only />
  </body>
</html>
