---
import "@fontsource-variable/domine";
import "@fontsource-variable/open-sans";
import { ClientRouter } from "astro:transitions";
import { Modal } from "../components/Modal";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/haikus/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>Haikus</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
    <Modal client:load />
  </body>
</html>

<style is:global>
  :root {
    --bg-color: rgb(5, 12, 1);
    --bg-color-clear: rgb(41, 49, 38);
    --text-color: rgba(255, 255, 255, 0.8);
    --text-color-disabled: rgba(255, 255, 255, 0.3);
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    min-height: 100dvh;
    font-family: "Open Sans Variable", sans-serif;

    @media (prefers-color-scheme: dark) {
      background-color: var(--bg-color);
      color: var(--text-color);
    }
  }

  main {
    width: 100%;
    min-width: 300px;
    max-height: 100%;
    min-height: 600px;
    height: 100%;
    margin: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    overflow: hidden;

    container-type: inline-size;

    &.slim {
      max-width: 500px;
    }
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  h1,
  h2,
  h3 {
    font-family: "Domine Variable", serif;
  }

  button {
    background-color: transparent;
    border: 0;
    color: inherit;
    font-family: inherit;
    cursor: pointer;
    font-size: inherit;
    width: fit-content;
  }
</style>
